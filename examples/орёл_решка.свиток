деревушка Случайно впереди
    число(от, до) впереди
        воздать Math.floor(Math.random() * (до - от) + от);
    конец
    Случайное_число() впереди
        воздать Math.random();
    конец
конец

метод орёлрешка() впереди
    ячеечка рандом = построить Случайно
    ячеечка список = ["орёл", "решка"]
    ячеечка число = запуск рандом.Случайное_число

    ячеечка ответ = ""

    условно число <= 0.50 впереди
        ответ = "орёл"
    конец или число > 0.50 впереди
        ответ = "решка"
    конец

    воздать ответ
конец

выполнить впереди
    ячеечка вопрос = свиточек.спросить "Орёл или решка? "

    ячеечка ответ = запуск орёлрешка

    условно вопрос == ответ впереди
        свиточек.вписать "Вы победили! Ответ был", ответ
    конец иначе впереди
        свиточек.вписать "Вы проиграли. Ответ был", ответ
    конец
конец когда верно;
